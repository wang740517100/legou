    <modelVersion>4.0.0</modelVersion>

    <groupId>cn.wangkf.auth</groupId>
    <artifactId>legou-auth</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>legou-auth-service</module>
        <module>legou-auth-common</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <!-- The plugin rewrites your manifest -->
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal><!--可以把依赖的包都打包到生成的Jar包中 -->
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>